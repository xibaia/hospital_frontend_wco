<page-meta>
  <navigation-bar title="患者登录" back="{{false}}" color="black" background="#FFF"></navigation-bar>
</page-meta>
<view class="login-container">
  <view class="logo">
    <text class="logo-text">医院管理系统</text>
  </view>
  
  <view class="form-container">
    <view class="form-group">
      <text class="label">用户名</text>
      <input class="input" placeholder="请输入用户名" value="{{username}}" bindinput="onUsernameInput" />
    </view>
    
    <view class="form-group">
      <text class="label">密码</text>
      <input class="input" type="password" placeholder="请输入密码" value="{{password}}" bindinput="onPasswordInput" />
    </view>
    
    <button class="login-btn" bindtap="onLogin" disabled="{{!canLogin}}">登录</button>
    
    <view class="register-link">
      <text bindtap="goToRegister">还没有账号？点击注册</text>
    </view>
  </view>
</view>