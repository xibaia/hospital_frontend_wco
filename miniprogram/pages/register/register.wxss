.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: white;
  border-radius: 60rpx;
  margin: 0 auto 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #667eea;
  font-weight: bold;
}

.title {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fafafa;
}

.input:focus {
  border-color: #667eea;
  background: white;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fafafa;
  display: flex;
  align-items: center;
}

.picker-placeholder {
  color: #999;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fafafa;
}

.textarea:focus {
  border-color: #667eea;
  background: white;
}

.name-group {
  display: flex;
  gap: 20rpx;
}

.name-input {
  flex: 1;
}

.register-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.register-btn:disabled {
  background: #ccc;
}

.login-link {
  text-align: center;
}

.login-btn {
  background: transparent;
  color: #667eea;
  border: none;
  font-size: 28rpx;
  text-decoration: underline;
}

.error-msg {
  color: #ff4757;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: center;
}

.loading {
  opacity: 0.6;
  pointer-events: none;
}